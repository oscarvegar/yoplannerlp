{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
{{> cover}}
<div class="container container-znews">
	{{#is "home"}}
	<div class="row">
		<div id="top-widget">
		</div>
	</div>
	{{/is}}
	<div class="col-md-8">
		{{#is "home"}}
		<div class="row">
			<div id="main-widgets">
			</div>
		</div>
		<div class="row">
			<h3 class="title-widget-home"><span>Posts Recientes</span></h3>	
		</div>
		{{/is}}
        {{#foreach posts}}
		    {{> loop}}
        {{/foreach}}
        {{pagination}}
	</div>
	{{> sidebar}}
</div>
<div class="spinnerBg"></div>
<div class="spinner">
  <img alt="Loading Image" src="../assets/images/loading.svg">
</div>