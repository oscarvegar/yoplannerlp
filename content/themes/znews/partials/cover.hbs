<div class="cover-image-home {{#if @blog.cover}}" style="background-image: url({{@blog.cover}});"{{else}}no-bg-cover"{{/if}}>
	<div class="cover-shadow">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="home-cover-main">
					{{#if @blog.title}}
					<h1>
					{{@blog.title}}
					</h1>
					{{/if}}
	                {{#if @blog.description}}
					<div class="description">{{@blog.description}}</div>
	                {{/if}}
	                </div>
				</div>
			</div>
		</div>
	</div>
</div>